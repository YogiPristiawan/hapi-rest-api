{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": 0,
        "semi": ["error", "never",
            {
                "beforeStatementContinuationChars": "never"
            }],
        "func-names": ["error", "never"],
        "no-unused-vars": [
            "error",
            {
                "args": "after-used"
            }
        ]
    }
}
